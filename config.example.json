{
    "channels": [
        {
            "channel_id": "@example_channel",
            "name": "Example Channel",
            "is_active": true,
            "summarization_prompt": "Please summarize the following news in English. Key highlights first, then brief mentions of others. Use Markdown and include links if provided.\n\nNews:\n\n{news_text}"
        },
        {
            "channel_id": "@another_channel",
            "name": "Another Channel",
            "is_active": true
        }
    ],
    "filters": {
        "string": [
            {
                "match": "Subscribe now",
                "action": "remove_fragment"
            },
            {
                "match": "Buy premium",
                "action": "drop_message"
            }
        ],
        "regex": [
            {
                "pattern": "^\\[AD\\].*",
                "action": "drop_message"
            },
            {
                "pattern": "\\s+#promo\\s+",
                "action": "replace_fragment",
                "replacement": " "
            }
        ]
    }
}