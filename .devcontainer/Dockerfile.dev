FROM mcr.microsoft.com/devcontainers/python:3.12

# The base image already includes:
# - 'vscode' user (UID 1000) with sudo
# - git, curl, build-essential
# - Python 3.12

USER root
RUN apt-get update && \
    apt-get install -y nodejs npm && \
    rm -rf /var/lib/apt/lists/*

USER vscode

# Setup virtual environment as expected by devcontainer.json
ENV VIRTUAL_ENV=/home/vscode/venv
RUN python3 -m venv $VIRTUAL_ENV
ENV PATH="$VIRTUAL_ENV/bin:$PATH"

# Install dev tools and project dependencies
COPY --chown=vscode:vscode ingest/requirements.txt /tmp/ingest-requirements.txt
COPY --chown=vscode:vscode transform/requirements.txt /tmp/transform-requirements.txt
COPY --chown=vscode:vscode web-console/backend/requirements.txt /tmp/web-console-requirements.txt

RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir pytest pytest-asyncio pytest-mock ipython httpx && \
    pip install --no-cache-dir -r /tmp/ingest-requirements.txt && \
    pip install --no-cache-dir -r /tmp/transform-requirements.txt && \
    pip install --no-cache-dir -r /tmp/web-console-requirements.txt

# Environment variables for Python
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

WORKDIR /workspace
